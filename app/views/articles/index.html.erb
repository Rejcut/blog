<div class="text-center">
  <h1>Mon Blog</h1>
</div>

<div class="container">
  <div class = "row">
    <% @articles.each do |article|  %>
    <div class="col-12">
      <%= link_to article_path(article.id) do %>
      <div class="shadow bg-white rounded p-4 d-flex justify-content-between">
      <h2><%= article.title %></h2> <h2><%= "*" * article.stars %></h2>
      <p><b><%= article.created_at.strftime("%D")  %></b></p>
    </div>
    </div>
    <% end %>
    <% end %>
    <%= link_to "New article", new_article_path, class: "btn btn-primary" %>
  </div>
</div>
