<div class="container shodow bg-white rounded p-4 textcenter my-5 mb-4">
  <h1><%=  @article.title%></h1>
  <p><%= "*" * @article.stars %></p>
  <h2><%= @article.created_at.strftime("%d %b %Y") %></h2>
  <p><%= @article.content %></p>
  <%= link_to "Destroy", article_path(@article.id), method: :delete, class: "btn btn-danger" %>

  <%= link_to "Edit", edit_article_path(@article.id), class: "btn btn-primary" %>
  <%= link_to "Back", articles_path, class: "btn btn-warning" %>
</div>
